#include <stdio.h>
#include <stdlib.h>

int main()
{
    int userNum, check;
    printf("Input any integer: ");
    check = scanf("%d", &userNum);

if(!check)
        {
        printf("The inputted data is Invalid.\n\n");
        return 0;
        }

if(userNum < 0)
        {
        printf("The integer is a negative number.\n\n");
        }

else if(userNum >= 0)
        {
        printf("The integer is a positive number.\n\n");
        }

return 0;

}
